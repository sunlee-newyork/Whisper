{
  "manifest_version": 3,

  "name": "Whisper",

  "description": "Message your friends in class or at work.",

  "version": "1",

  "browser_action": {
    "default_icon": "icon.png"
  },

  "options_page": "settings.html",

  "permissions": [  
    "tabs",
    "<all_urls>",
    "storage"
  ],

  "background": {
    "scripts": [
      "scripts/jquery-1.11.0.min.js",
      "scripts/strophe.js",
      "connection.js",
      "background.js"
    ],
    "persistent": true
  },

  "content_scripts": [
    {
      "matches": [ "<all_urls>" ],
      "css": [
        "message.css"
      ],
      "js": [
        "scripts/jquery-1.11.0.min.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ]
}
